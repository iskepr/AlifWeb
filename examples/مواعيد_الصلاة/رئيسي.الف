الصلاة_القادمة = "الفجر"
المتبقي_علي_الصلاة_القادمة = 2
الصلوات = ["الفجر","الظهر","العصر","المغرب","العشاء"]
صفحة("مواعيد الصلاة", "", "background: #122; color: white;"):
    توسيط("height: 100vh;"):
        بطاقة():
            توسيط():
                رأسي():
                    نص("الصلاة القادمة: ")
                    نص(الصلاة_القادمة)
                    نص(المتبقي_علي_الصلاة_القادمة)
            توسيط():
                نص("الصلوات")
            عمودي():
                لاجل س في مدى(5):
                    رأسي():
                        نص(الصلوات[س])
                        نص("الساعة 5")
            رابط("برمجة محمد سكيبر","https://iskepr.github.io","color: #155; text-decoration: none;")

