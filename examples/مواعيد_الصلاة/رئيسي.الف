الصلاة_القادمة = "الفجر"
المتبقي_علي_الصلاة_القادمة = "10 دقائق"
الصلوات = ["الفجر","الظهر","العصر","المغرب","العشاء"]
المواعيد = ["4:42","12:54","4:31","7:32","8:56"]

صفحة(العنوان:"مواعيد الصلاة", التصميم:"background: #122; color: white; font-size: 20px;"):
    توسيط(التصميم:"height: 100vh;"):
        بطاقة():
            توسيط():
                رأسي():
                    نص(النص: "الصلاة القادمة: ")
                    رأسي(التصميم:"justify-content:space-between; background: gray; padding: 2px; border-radius: 10px;"):
                        نص(النص: م"تبقى {المتبقي_علي_الصلاة_القادمة} علي {الصلاة_القادمة}")

            توسيط():
                نص(النص: "الصلوات")

            عمودي():
                لاجل س في مدى(طول(الصلوات)):
                    رأسي(التصميم:"justify-content:space-between;"):
                        نص(النص: الصلوات[س])
                        نص(النص: المواعيد[س])

            توسيط():
                رابط(النص: "برمجة محمد",الرابط: "https://iskepr.github.io",التصميم: "color: #155;")
