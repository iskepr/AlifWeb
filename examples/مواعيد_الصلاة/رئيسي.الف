الصلاة_القادمة = "الفجر"
المتبقي_علي_الصلاة_القادمة = "10 دقائق"
الصلوات = ["الفجر","الظهر","العصر","المغرب","العشاء"]
المواعيد = ["4:42","12:54","4:31","7:32","8:56"]

صفحة("مواعيد الصلاة", "", "background: #122; color: white; font-size: 20px;"):
    توسيط("height: 100vh;"):
        بطاقة():
            توسيط():
                رأسي():
                    نص("الصلاة القادمة: ")
                    رأسي("justify-content:space-between; background: gray; padding: 2px; border-radius: 10px;"):
                        نص(م"تبقى {المتبقي_علي_الصلاة_القادمة} علي {الصلاة_القادمة}")

            توسيط():
                نص("الصلوات")

            عمودي():
                لاجل س في مدى(5):
                    رأسي("justify-content:space-between;"):
                        نص(الصلوات[س])
                        نص(المواعيد[س])

            توسيط():
                رابط("برمجة محمد","https://iskepr.github.io","color: #155;")

