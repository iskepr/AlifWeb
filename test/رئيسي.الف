دالة تتبع_سقوط_الكرة(الارتفاع_الاولي, الكتلة, مساحة_المقطع = 0.045):
	الجاذبية = 9.81
	خطوات_الزمن = 0.25
	معامل_السحب = 0.47
	كثافة_الهواء = 1.225

    الارتفاع = الارتفاع_الاولي
	السرعة = 0
	الزمن = 0

    بينما الارتفاع > 0:
        اطبع("السلام عليكم يا عالم")
        قوة_الجاذبية = الكتلة * الجاذبية
        اطبع("السلام عليكم يا عالم")

	اطبع("الكرة اصطدمت بالارض")

تتبع_سقوط_الكرة()