س = صح
ص = خطأ
اذا س:
    اطبع("س أكبر من 9")
اواذا ص:
    اطبع("س تساوي 9") 
    لاجل ب في مدى(10):
        اطبع(ب)
        س = صح
        بينما س:
            اطبع(س)
            توقف
    
        اطبع("محمد")
والا:
    اطبع("س ليست اكبر من 9 ولا تساويها")

